<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@drawable/dialog_bg"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="20dp"
    app:circularflow_defaultRadius="20dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/no_internet" />

    <TextView
        android:id="@+id/internet_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_bold_italic"
        android:gravity="center"
        android:text="No Internet Connection"
        android:textColor="#FF018786"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/internet_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_italic"
        android:gravity="center"
        android:text="Please check your internet connection and try again."
        android:textColor="#FF018786"
        android:textSize="16sp" />

    <Button
        android:id="@+id/Ok"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:backgroundTint="#01B3A1"
        android:fontFamily="@font/acme"
        android:text="Ok"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:cornerRadius="50dp"
        app:strokeColor="@color/teal_700"
        app:strokeWidth="1dp"
        tools:strokeColor="@color/teal_700" />

</LinearLayout>