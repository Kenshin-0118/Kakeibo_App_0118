<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".History">

    <RelativeLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/username2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/archivo_bold_italic"
            android:gravity="left|center_vertical"
            android:text="History"
            android:textColor="@android:color/background_light"
            android:textSize="34sp" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Header"
        android:layout_marginTop="0dp"
        android:background="@drawable/body_separator"
        android:orientation="vertical">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/category_all"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/category_background"
                        android:padding="3dp"
                        app:srcCompat="@drawable/category_all" />

                    <TextView
                        android:id="@+id/category_all_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/archivo_italic"
                        android:gravity="center"
                        android:text="All Category"
                        android:textColor="#FF018786"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/category_food"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/category_background"
                        android:padding="3dp"
                        app:srcCompat="@drawable/category_food" />

                    <TextView
                        android:id="@+id/category_food_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/archivo_italic"
                        android:gravity="center"
                        android:text="Food"
                        android:textColor="#FF018786"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/category_house"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/category_background"
                        android:padding="3dp"
                        app:srcCompat="@drawable/category_house" />

                    <TextView
                        android:id="@+id/category_house_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/archivo_italic"
                        android:gravity="center"
                        android:text="Housing"
                        android:textColor="#FF018786"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/category_traveler"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/category_background"
                        android:padding="3dp"
                        app:srcCompat="@drawable/category_traveler" />

                    <TextView
                        android:id="@+id/category_traveler_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/archivo_italic"
                        android:gravity="center"
                        android:text="Travel"
                        android:textColor="#FF018786"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/category_heart"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/category_background"
                        android:padding="3dp"
                        app:srcCompat="@drawable/category_heart" />

                    <TextView
                        android:id="@+id/category_heart_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/archivo_italic"
                        android:gravity="center"
                        android:text="Health"
                        android:textColor="#FF018786"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/category_entertain"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/category_background"
                        android:padding="3dp"
                        app:srcCompat="@drawable/category_entertain" />

                    <TextView
                        android:id="@+id/category_entertain_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/archivo_italic"
                        android:gravity="center"
                        android:text="Entertainment"
                        android:textColor="#FF018786"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/category_clothing"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/category_background"
                        android:padding="3dp"
                        app:srcCompat="@drawable/category_hoodie" />

                    <TextView
                        android:id="@+id/category_clothing_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/archivo_italic"
                        android:gravity="center"
                        android:text="Clothing"
                        android:textColor="#FF018786"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/category_education"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/category_background"
                        android:padding="3dp"
                        app:srcCompat="@drawable/category_book" />

                    <TextView
                        android:id="@+id/category_education_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/archivo_italic"
                        android:gravity="center"
                        android:text="Education"
                        android:textColor="#FF018786"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/category_others"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/category_background"
                        android:padding="3dp"
                        app:srcCompat="@drawable/category_others" />

                    <TextView
                        android:id="@+id/category_others_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/archivo_italic"
                        android:gravity="center"
                        android:text="Others"
                        android:textColor="#FF018786"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/selected_head2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/archivo_bold_italic"
            android:gravity="left|center_vertical"
            android:text="All Category:"
            android:textColor="@color/cyan_700"
            android:textSize="20sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_view"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_above="@+id/navigation_bar" />

        <LinearLayout
            android:id="@+id/navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_no"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/home"
                android:layout_width="90dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/home" />

            <ImageView
                android:id="@+id/history"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:padding="2dp"
                app:srcCompat="@drawable/history_selected" />

            <ImageView
                android:id="@+id/analytics"
                android:layout_width="90dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/analytics" />

            <ImageView
                android:id="@+id/account"
                android:layout_width="90dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/user" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>