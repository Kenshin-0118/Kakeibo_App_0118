<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@drawable/dialog_bg"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="10dp"
    app:circularflow_defaultRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:src="@drawable/category_book"
            app:civ_border_color="@color/teal_700"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="@color/hint" />


        <TextView
            android:id="@+id/category_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="Category Name"
            android:textColor="#FF018786"
            android:textSize="24sp"
            android:visibility="visible" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/amount_head"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_bold_italic"
            android:text="Amount: "
            android:textColor="#FF018786"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/food_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_italic"
            android:text="Amount Value"
            android:textColor="#FF018786"
            android:textSize="20sp"
            android:visibility="visible" />


    </LinearLayout>


    <TextView
        android:id="@+id/description_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_bold_italic"
        android:gravity="top|left"
        android:padding="5dp"
        android:text="Description:"
        android:textColor="#FF018786"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_italic"
                android:gravity="top|left"
                android:padding="10dp"
                android:text="Sample_long_text_for_testing_word_break_functionality"
                android:textColor="#FF018786"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>



    <TextView
        android:id="@+id/datetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_italic"
        android:gravity="right|center_vertical"
        android:paddingEnd="10dp"
        android:text="Date Recorded"
        android:textColor="#FF018786"
        android:textSize="12sp" />

</LinearLayout>